@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BeatsShop.Models.Account.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<div class="register-page">
    <div class="page-header text-center">
        <h1>@ViewData["Title"]</h1>
    </div>
    <partial name="_StatusMessage" model="Model"/>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="row g-3 needs-validation" novalidate>
                <h4 class="text-center">Create a new account.</h4>
                <hr/>

                <div class="col-md-12">
                    <div class="form-outline">
                        <input asp-for="UserName" class="form-control" required/>
                        <label class="form-label" asp-for="UserName"></label>
                        <div class="invalid-feedback">The UserName field is required.</div>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-outline">
                        <input asp-for="Email" class="form-control" autofocus autocomplete="on" required/>
                        <label class="form-label" asp-for="Email"></label>
                        <div class="invalid-feedback">The Email field is required.</div>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-outline">
                        <input type="password" asp-for="Password" class="form-control" placeholder="Must contain upper case and non alphanumeric symbols, min length 8" autocomplete="off" required/>
                        <label class="form-label" asp-for="Password"></label>
                        <div class="invalid-feedback">The Password field is required.</div>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-outline">
                        <input type="password" asp-for="ConfirmPassword" class="form-control" autocomplete="off" required/>
                        <label class="form-label" asp-for="ConfirmPassword"></label>
                        <div class="invalid-feedback">The ConfirmPassword field is required.</div>
                    </div>
                </div>

                    <button type="submit" class="btn btn-primary btn-block mb-4">Registration</button>
            </form>
        </div>
    </div>
</div>